<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/searchBluetooth"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_weight="1"
			android:text="扫描蓝牙设备" />

		<!--<Button-->
		<!--android:id="@+id/btnBindBD"-->
		<!--android:layout_width="0dp"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_weight="1"-->
		<!--android:text="绑定北斗卡" />-->

		<Button
			android:id="@+id/btnSendMsg"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_weight="1"
			android:text="发送报文" />

		<!--<Button-->
		<!--android:id="@+id/btnGetDevice"-->
		<!--android:layout_width="0dp"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_weight="1"-->
		<!--android:text="设备状态" />-->



	</LinearLayout>

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_Message_status"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:singleLine="false" />


			<TextView
				android:id="@+id/tv_device_status"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:singleLine="false" />


			<LinearLayout
				android:id="@+id/ll_layout_sign"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:orientation="horizontal"
				android:visibility="gone">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="10dp"
					android:text="盒子信号:" />


				<LinearLayout
					android:id="@+id/home_layout_boxSignal_link"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="5dp"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/box_signal_img1"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0" />

					<ImageView
						android:id="@+id/box_signal_img2"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0" />

					<ImageView
						android:id="@+id/box_signal_img3"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0" />

					<ImageView
						android:id="@+id/box_signal_img4"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0" />

					<ImageView
						android:id="@+id/box_signal_img5"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0" />

					<ImageView
						android:id="@+id/box_signal_img6"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0" />

					<ImageView
						android:id="@+id/box_signal_img7"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0"
						android:visibility="visible" />

					<ImageView
						android:id="@+id/box_signal_img8"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0"
						android:visibility="visible" />

					<ImageView
						android:id="@+id/box_signal_img9"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:layout_marginEnd="5dp"
						android:background="@drawable/signal_icon_0"
						android:visibility="visible" />

					<ImageView
						android:id="@+id/box_signal_img10"
						android:layout_width="10dp"
						android:layout_height="52dp"
						android:background="@drawable/signal_icon_0"
						android:visibility="visible" />
				</LinearLayout>
			</LinearLayout>


			<LinearLayout
				android:id="@+id/ll_message_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tv_Message_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="10dp"
					android:textSize="25sp"
					android:gravity="center"
					android:textColor="@color/colorBlackgray"
					android:singleLine="false"
					android:text="消息记录"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingStart="10dp"
					android:textColor="@color/colorBlackgray"
					android:background="@layout/v1_bk_head_splitbar"
					android:textSize="18sp"
					android:text="已发送" />

				<com.DingTu.Controls.ListViewForScrollView
					android:id="@+id/lv_send_list"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:divider="@null"
					android:dividerHeight="10dp"
					>

				</com.DingTu.Controls.ListViewForScrollView>


				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="50dp"
					android:paddingStart="10dp"
					android:textColor="@color/colorBlackgray"
					android:background="@layout/v1_bk_head_splitbar"
					android:textSize="18sp"
					android:text="已接收" />

				<com.DingTu.Controls.ListViewForScrollView
					android:id="@+id/lv_recive_list"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:divider="@null"
					android:dividerHeight="10dp"
					android:layout_marginBottom="20dp">

				</com.DingTu.Controls.ListViewForScrollView>

			</LinearLayout>

		</LinearLayout>


	</ScrollView>

</LinearLayout>
